void setup()
{
  pinMode(13, OUTPUT);
  pinMode(12, OUTPUT);
  pinMode(11, OUTPUT);
  pinMode(10, OUTPUT);
  pinMode(9, OUTPUT);
  pinMode(8, OUTPUT);
  pinMode(7, OUTPUT);
  pinMode(6, OUTPUT);
  pinMode(5, OUTPUT);
  pinMode(4, OUTPUT);
  pinMode(3, INPUT);//reset
  pinMode(2, INPUT);// pausa/continuar
  
  Serial.begin(9600);//para utilizar monitor en serie
}

unsigned long millisAhora;


void loop()
{
  digitalWrite(13, LOW);
  digitalWrite(12, LOW);
  digitalWrite(11, LOW);
  digitalWrite(10, LOW);
  digitalWrite(9, LOW);
  digitalWrite(8, LOW);
  digitalWrite(7, LOW);
  digitalWrite(6, LOW);
  digitalWrite(5, LOW);
  digitalWrite(4, LOW);
  
 
  Serial.print("Segundos: ");
  millisAhora = millis();
  
 int segundos = millisAhora/1000;
 
  Serial.println(segundos);//Muestra en consola el tiempo transcurrido desde que empieza a correr el programa
 
  delay(1000);
}
